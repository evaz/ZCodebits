<!DOCTYPE HTML>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>fb login</title>
  <script src="http://code.jquery.com/jquery-1.8.0.min.js" type="text/javascript"></script>
  <script src="//connect.facebook.net/en_US/all.js" type="text/javascript"></script>
</head>
<body>
  <div id="fb-root"></div>
  <button class="loginbtn" >Login</button>
  <div class="status"></div>
  <button class="logoutbtn" >Logout</button>
  <script type="text/javascript">

    FB.init({
      appId:"201652323293696",
      status     : true, 
      cookie     : true,
      xfbml      : true
    });

    function fbLoggedInOut(response) {
      if (response.authResponse){
        alert("You are Logged in! Yay!");
        $(".status").text("You are Logged In =D")
      console.log(response);
      }
      else {
        alert("You are logged out!");
        $(".status").text("You are Not Logged In =O");
      }
    }

    FB.getLoginStatus(function(response){
      if (response.status ==='connected') {
        $(".status").text("You are Logged in =]");
      }
    });

    $(".loginbtn").click(function(){
      FB.login(fbLoggedInOut);
    });
    $(".logoutbtn").click(function(){
      FB.logout(fbLoggedInOut);
    });
  </script>

</body>
</html>
